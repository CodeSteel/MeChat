@using System.Security.Claims
@using MeChat.Contexts
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject UserManager<User> userManager;
@{
    userManager = Context.RequestServices.GetService<UserManager<User>>();
    User? me = await userManager?.GetUserAsync(new ClaimsPrincipal(User.Identity));
    ApplicationDataContext? appDbContext = Context.RequestServices.GetService<ApplicationDataContext>();
    List<ChatGroup> groupsWithUser = new List<ChatGroup>();
    Guid meId = me?.Id ?? Guid.Empty;
    if (meId != Guid.Empty)
    {
        groupsWithUser = appDbContext?.ChatGroups.Include(x => x.Users)
            .Where(x => x.Users.Any(x => x.Id == meId))
            .ToList();
    }

    ChatGroup? selectedGroup = groupsWithUser.Count > 0 ? groupsWithUser[0] : null;
}

<div class="flex justify-between h-full">
    <div class="w-[250px] relative h-full bg-brand-900 border-r border-brand-100/[0.1] shadow-xl">
        <div class="groups">
            @foreach (ChatGroup group in groupsWithUser)
            {
                <div class="px-5 h-[60px] flex flex-col bg-brand-900 border-b border-brand-50/[0.2] shadow-md">
                    <p class="text-white text-2xl my-auto">@group.Name</p>
                </div>
            }
            <br/>
            <a asp-action="CreateGroup" asp-controller="Home" class="w-full px-5 h-[60px] flex flex-col bg-brand-900 border-b border-t border-brand-50/[0.2] shadow-md">
                <div class="text-white text-2xl my-auto flex flex-row items-center space-x-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                    </svg>
                    <p class="text-xl">Create Group</p>
                </div>
            </a>
            <a asp-action="FindGroup" asp-controller="Home" class="mt-4 w-full px-5 h-[60px] flex flex-col bg-brand-900 border-b border-t border-brand-50/[0.2] shadow-md">
                <div class="text-white text-2xl my-auto flex flex-row items-center space-x-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
                        <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1zm-7.978-1L7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002-.014.002zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0M6.936 9.28a6 6 0 0 0-1.23-.247A7 7 0 0 0 5 9c-4 0-5 3-5 4q0 1 1 1h4.216A2.24 2.24 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816M4.92 10A5.5 5.5 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0m3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4"/>
                    </svg>
                    <p class="text-xl">Find a Group</p>
                </div>
            </a>
        </div>
    </div>
    
    <div class="w-full bg-brand-900 m-4 p-4 rounded-lg shadow-xl text-white flex flex-col justify-between">
        @if (selectedGroup != null)
        {
            <div>
                <p class="text-2xl mb-2">@selectedGroup.Name</p>
            </div>
            <div class=" h-full mb-4 overflow-y-scroll p-2 scrollbar">
                @for (int i = 0; i < 200; i++)
                {
                    <p class="flex items-center space-x-1 ">
                        <span class="text-true-gray-400 text-sm">9:03 PM</span>
                        <a class="flex items-center space-x-2">
                            <span><img class="ml-2" src="favicon.ico" width="16" height="16" /></span>
                            <span class="text-lg font-bold">Isaac: </span>
                        </a>
                        <span class="text-md">Text</span>
                    </p>
                }
            </div>
            <div class="w-full flex space-x-5">
                <input placeholder="type something..." type="text" class="bg-transparent rounded border border-brand-50/[0.3] shadow-xl w-full" />
                <input type="Submit" value="Send" class="bg-transparent rounded border border-brand-50/[0.3] shadow-xl h-full w-fit px-24" />
            </div>
        }
    </div>

    <div class="w-[250px] relative h-full bg-brand-900 border-l-2 border-brand-100/[0.2] shadow-xl">
        <div class="groups flex flex-col justify-between">
            @if (selectedGroup != null)
            {
                <div>
                    @foreach (User user in selectedGroup.Users)
                    {
                        <div class="px-5 h-[60px] flex flex-col bg-brand-900 border-b border-brand-50/[0.2] shadow-md">
                            <p class="text-white  my-auto">@user.DisplayName</p>
                        </div>
                    }
                </div>
                <form asp-controller="Home" asp-action="LeaveGroup" asp-route-groupId=@selectedGroup.Id>
                    <button type="submit" class="w-full px-5 h-[60px] flex flex-col bg-brand-900 border-b border-t border-brand-50/[0.2] shadow-md">
                        <div class="text-white text-2xl my-auto flex flex-row items-center space-x-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-door-open-fill" viewBox="0 0 16 16">
                                <path d="M1.5 15a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2.5A1.5 1.5 0 0 0 11.5 1H11V.5a.5.5 0 0 0-.57-.495l-7 1A.5.5 0 0 0 3 1.5V15zM11 2h.5a.5.5 0 0 1 .5.5V15h-1zm-2.5 8c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1"/>
                            </svg>
                            <p class="text-xl">Leave Group</p>
                        </div>
                    </button>
                </form>
            }
        </div>
    </div>
</div>