<!DOCTYPE html>
<html lang="en" class="min-h-screen">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>MeChat @(ViewData["Title"] == null ? "" : "| " + ViewData["Title"])</title>
    <link rel="stylesheet" href="~/css/app.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MeChat.styles.css" asp-append-version="true"/>
</head>
<body class="bg-brand-950 relative h-full">

<div class=" top-0 z-40 h-[60px] w-full px-5 items-center text-white backdrop-blur lg:z-50 border-b border-brand-50/[0.06] supports-backdrop-blur:bg-white/95 shadow-lg">
    <ul class="flex flex-row justify-between h-full items-center">
        <li> 
            <a asp-controller="Home" asp-action="Index" class="font-bold text-white text-lg flex flex-row items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="text-brand-300 bi bi-chat-left-fill mt-1" viewBox="0 0 16 16">
                    <path d="M2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                </svg>
                <p>MeChat</p>
            </a>
        </li>
        @if (User.Identity.IsAuthenticated)
        {
            <li class="flex items-center space-x-8">
                @if (User.Identity.IsAuthenticated)
                {
                <a asp-controller="Home" asp-action="Dashboard" class="flex items-center space-x-2 text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="text-brand-300 bi bi-house-fill" viewBox="0 0 16 16">
                        <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z"/>
                        <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293z"/>
                    </svg>
                    <p>Dashboard</p>
                </a>
                }

                <a asp-controller="Account" asp-action="Index" class="text-white duration-300 transition-all hover:text-true-gray-300">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="white" class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                    </svg>
                </a>
            </li>
        }
    </ul>
</div>

<div class="w-full" style="height: calc(100% - 60px)">
    @RenderBody()
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="_framework/blazor.server.js"></script>
<script>
    if ( window.history.replaceState ) {
        window.history.replaceState( null, null, window.location.href );
    }
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>