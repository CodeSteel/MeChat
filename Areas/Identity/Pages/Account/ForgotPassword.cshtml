@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<main class="flex text-white h-full">
    <form method="post" class="m-auto w-[500px]">
        <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
        <div class="flex flex-col mb-3">
            <label asp-for="Input.Email" class="form-label font-bold mb-2"></label>
            <span asp-validation-for="Input.Email" class="text-red-500"></span>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        </div>
        <button type="submit" class="w-full btn btn-lg btn-primary">Reset Password</button>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
