@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex flex-col text-white border border-brand-50/[0.2] rounded w-fit p-10 m-autotext-white border border-brand-50/[0.2] rounded w-fit p-10 m-auto">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex flex-col space-y-3">
        <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
        <div class="flex flex-col space-y-1">
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-red-500"></span>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        </div>
        <div class="flex flex-col space-y-1">
            <label asp-for="Input.DisplayName">Display Name</label>
            <span asp-validation-for="Input.DisplayName" class="text-red-500"></span>
            <input asp-for="Input.DisplayName" class="form-control" autocomplete="username" aria-required="true" placeholder="coolguy123" />
        </div>
        <div class="flex flex-col space-y-1">
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-red-500"></span>
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
        </div>
        <div class="flex flex-col mb-2 space-y-1">
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create Account</button>
    </form>
    <div class="mt-5">
        <h3 class="mb-1">Or use another service to register.</h3>
        @{
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div class="mt-3 flex flex-col space-y-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                    }
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
